.question
 %h3= @question.title
 .question_content
  %h3= @question.content
 - if user_signed_in? && current_user.is_author_of?(@question)
  = link_to_function("Edit Question", "$(this).parent('.question').children('.edit_question_form').fadeToggle()",  class: 'appear_link')
  .edit_question_form
   = form_for @question, url: question_path(@question), remote: true do |f|
    = f.label :content, "Update Form"
    %br
    = f.text_field :content, :onclick => 'this.select();'
    %br
    = f.submit 'Update an question'
  %br
  = link_to 'Delete my Question', @question, method: :delete
  %br
 %br
 .new_answer
  %hr
  = form_for [@question, @question.answers.new], remote: true do |a|
   = a.label :content, 'Form for Answer'
   %br
   = a.text_field :content
   %br
   = a.submit 'Provide an answer'
  %hr
 %h3 Question Answers
 .answers
  = render @question.answers.best_first
  / sort_by {|answer| answer.best_answer ? 0 : 1 }
  %hr