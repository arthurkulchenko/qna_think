.rate-form
 - if question.persisted? && user_signed_in? && question.user_id != current_user.id
  = form_for question.votes.new, remote: true, url: question_votes_path(question), method: :post do |i|
   = i.label :mark, "Good"
   = i.radio_button :mark, 1
   %hr
   = i.label :mark, "Bad"
   = i.radio_button :mark, -1
   %hr
   = i.submit "Rate Question"
  %p="Total rate is #{question.mark}"
  - if @vote = question.votes.where(user: current_user).first
   = link_to "Take back your voice", vote_path(@vote), method: :delete