<% publish_to "/#{@object.to_channel_name}/#{@object.id}/comments" do %>
  var classOfObject = '<%="#{@object.class.to_s.downcase.singularize}"%>'
  $("."+classOfObject).children(".comments").children('.comment').last().append("<%=j render partial: 'comments/comment', locals: { comment: @comment } %>");
<%end%>
$('#comment_content').val('')