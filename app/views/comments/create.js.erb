<% publish_to "/questions/#{@question_id}/comments" do %>
  var classOfObject = "." + '<%="#{@object.class.to_s.downcase.pluralize}"%>';
  var idOfObject = "#" + '<%="#{@object.id}"%>';
  $(classOfObject).children(idOfObject).children(".comments").children('.comment').last().append("<%=j render partial: 'comments/comment', locals: { comment: @comment } %>");
<%end%>
$('#comment_content').val('');